<h1>Listing products</h1>
<small>Order Products by</small>

<%= radio_button_tag 'radio_input', 'name', true %> Name
<%= radio_button_tag 'radio_input', 'price' %> Price
<%= radio_button_tag 'radio_input', 'latest' %> Latest

<table>
  <tr>
    <th>Price</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
<% @products.each do |product| %>
  <tr>
    <td><%= product.price %></td>
    <td><%= product.name %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>



</table>

